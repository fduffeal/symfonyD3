{% extends 'AcmeEsBattleBundle::layout.html.twig' %}
{% block content %}
<p>
	<br/><a class="btn btn-primary" href="{{ path('acme_es_battle_admin_news_add', { 'id': 0 }) }}">Ecrire une nouvelle news</a>
</p>
<ul style="padding:0">
{% for topic in topics %}
<li class="list-group-item {% if topic.status == 'news' %} list-group-item-success {% endif %}">
	{{ topic.id }} -  {{ topic.titre }} <span class="label label-success">{% if topic.status == 'news' %} NEWS {% endif %}</span>{% if not topic.visible %} <span class="label label-warning">NON VISIBLE</span> {% endif %}
	<br/>
	<div class="btn-group-xs">
		<a href="{{ path('acme_es_battle_admin_news_add', { 'id': topic.id }) }}" class="btn btn-default">Editer</a>
		<a href="{{ path('acme_es_battle_admin_topic', { 'id': topic.id }) }}" class="btn btn-default">Administrer</a>
	</div>
</li>
{% endfor %}
</ul>
{% endblock %}