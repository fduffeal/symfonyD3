{% extends 'AcmeEsBattleBundle::layout.html.twig' %}
{% block content %}
    <h2>Liste des Matchmaking</h2>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <td>
                    #
                </td>
                <td>
                    Description
                </td>
                <td>
                    Tags
                </td>
                <td>
                    Actions
                </td>
            </tr>
        </thead>
        <tbody>
        {% for matchmaking in matchmakings %}
            <tr>
                <td>
                    {{ matchmaking.id }}
                </td>
                <td>
                    {{ matchmaking.description }}
                </td>
                <td>
                    {% for tag in matchmaking.tags %}
                        <span>{{ tag.nom }}</span>
                    {% endfor %}
                </td>
                <td>
                    <a href="{{ path('acme_es_battle_admin_matchmaking_update', { 'id': matchmaking.id }) }}"
                       type="button" class="btn btn-info" >Update</a>
                    <a type="button" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('acme_es_battle_admin_matchmaking_create') }}" class="btn btn-primary">Cr√©er un matchmaking</a>
{% endblock %}